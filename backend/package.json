{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev:api": "bun --watch api.ts",
    "dev:bot": "DEBUG=\"grammy*\" bun --watch bot.ts",
    "dev:indexer": "bun --watch indexer.ts",
    "start:api": "bun api.ts",
    "start:bot": "DEBUG=\"grammy*\" bun bot.ts",
    "start:indexer": "bun indexer.ts",
    "start": "concurrently -n api,bot,indexer -c green,blue,magenta \"npm run start:api\" \"npm run start:bot\" \"npm run start:indexer\"",
    "dev": "concurrently -n api,bot,indexer -c green,blue,magenta \"npm run dev:api\" \"npm run dev:bot\" \"npm run dev:indexer\"",
    "cron": "bun cron.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^8.2.2",
    "prisma": "^5.13.0",
    "tsx": "^4.11.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@grammyjs/auto-retry": "^2.0.1",
    "@grammyjs/conversations": "^1.2.0",
    "@grammyjs/ratelimiter": "^1.2.0",
    "@grammyjs/runner": "^2.0.3",
    "@grammyjs/transformer-throttler": "^1.2.1",
    "@solana/spl-token": "^0.4.6",
    "@solana/web3.js": "^1.91.8",
    "elysia": "^1.0.21",
    "grammy": "^1.23.0",
    "resend": "^3.2.0",
    "stripe": "^15.8.0",
    "ws": "^8.17.0"
  }
}